<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/Card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/service_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:contentDescription="@string/service_photo"
                android:padding="10dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/ic_restaurant" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="@string/service_name"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/openingHour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:text="@string/opening_hour" />

                            <TextView
                                android:id="@+id/is_open"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:padding="3dp"
                                android:text="@string/opening_hour" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:paddingTop="5dp">


                            <ImageView
                                android:id="@+id/walk"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                app:srcCompat="@drawable/walk" />

                            <TextView
                                android:id="@+id/ETA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="@string/distance"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/clock"
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                app:srcCompat="@drawable/clock_black" />

                            <TextView
                                android:id="@+id/queue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="@string/time"
                                android:textColor="@android:color/secondary_text_light"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/share2"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0"
                            android:background="@drawable/share"
                            android:src="@drawable/share"
                            tools:src="@drawable/share" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
